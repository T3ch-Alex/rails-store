<div class="container mt-5">
    <h1 class="mb-4">Fale Conosco</h1>

    <%= form_with url: home_contact_path, method: :post, local: true, class: "needs-validation" do |f| %>
    <div class="mb-3">
        <%= f.label :nome, "Nome", class: "form-label" %>
        <%= f.text_field :nome, class: "form-control", required: true, placeholder: "Seu nome" %>
        <div class="invalid-feedback">
            Por favor, informe seu nome.
        </div>
    </div>

    <div class="mb-3">
        <%= f.label :email, "E-mail", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true, placeholder: "seu@exemplo.com" %>
        <div class="invalid-feedback">
            Por favor, informe um e-mail válido.
        </div>
    </div>

    <div class="mb-3">
        <%= f.label :mensagem, "Mensagem", class: "form-label" %>
        <%= f.text_area :mensagem, class: "form-control", required: true, rows: 5, placeholder: "Escreva sua mensagem..." %>
        <div class="invalid-feedback">
            A mensagem não pode ficar em branco.
        </div>
    </div>

    <%= f.submit "Enviar", class: "btn btn-primary" %>
    <% end %>
</div>